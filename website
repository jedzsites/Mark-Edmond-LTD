    <!-- Gallery Modal (single image view initially) -->
    <div id="galleryModal" class="modal-overlay">
        <div class="modal-content">
            <button id="closeModalBtn" class="modal-close-btn">&times;</button>
            <h3 class="text-xl md:text-3xl font-bold mb-4 md:mb-8" id="modalTitle">Image Details</h3>
            <img id="enlargedImage" class="modal-enlarged-image" src="" alt="Enlarged Project Image">
            <p id="imageDescription" class="modal-image-description"></p>
            <!-- Hidden container for the full grid content, populated when "See More" is clicked -->
            <div id="fullGalleryGridContainer" class="hidden"></div>
        </div>
    </div>

    <script>
        const allGalleryImages = [
            { "src": "https://raw.githubusercontent.com/jedzsites/Mark-Edmond-LTD/main/IMG_3683.jpeg", "alt": "Finished Bathroom Renovation", "description": "Bathroom Renovation" },
            { "src": "https://raw.githubusercontent.com/jedzsites/Mark-Edmond-LTD/main/IMG_3685.jpeg", "alt": "Before Kitchen/Floor Renovation", "description": "Floor Installation" },
            { "src": "https://raw.githubusercontent.com/jedzsites/Mark-Edmond-LTD/main/IMG_3684.jpeg", "alt": "Bathroom Renovation Progress", "description": "Bathroom Shower Area" },
            { "src": "https://raw.githubusercontent.com/jedzsites/Mark-Edmond-LTD/main/IMG_3691.jpeg", "alt": "Bathroom Corner Bath", "description": "Bathroom Remodel" },
            { "src": "https://raw.githubusercontent.com/jedzsites/Mark-Edmond-LTD/main/IMG_3686.jpeg", "alt": "Modern Bathroom Shower", "description": "Shower Installation" },
            { "src": "https://raw.githubusercontent.com/jedzsites/Mark-Edmond-LTD/main/IMG_3687.jpeg", "alt": "Modern Kitchen Renovation", "description": "Kitchen Remodel" },
            { "src": "https://raw.githubusercontent.com/jedzsites/Mark-Edmond-LTD/main/IMG_3688.jpeg", "alt": "Walk-in Shower Installation", "description": "Walk-in Shower" },
            { "src": "https://raw.githubusercontent.com/jedzsites/Mark-Edmond-LTD/main/IMG_3690.jpeg", "alt": "Bathroom Basin Area", "description": "Bathroom Fixtures" },
            { "src": "https://raw.githubusercontent.com/jedzsites/Mark-Edmond-LTD/main/IMG_3695.jpeg", "alt": "Freestanding Bath", "description": "Freestanding Bath Installation" },
            { "src": "https://raw.githubusercontent.com/jedzsites/Mark-Edmond-LTD/main/IMG_3693.jpeg", "alt": "Toilet and Basin Area", "description": "Powder Room Renovation" }
        ];

        // Function to create an image element with its overlay and event listener
        function createImageElement(image, isModalGridItem = false) {
            const imgDiv = document.createElement('div');
            imgDiv.className = 'relative group';
            if (isModalGridItem) {
                imgDiv.classList.add('gallery-modal-grid-item', 'cursor-pointer');
            }

            imgDiv.innerHTML = `
                <img src="${image.src}" alt="${image.alt}" class="gallery-image"
                     onerror="this.onerror=null;this.src='https://placehold.co/400x240/1f1f1f/cccccc?text=Image+Loading+Error';">
                <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-lg">
                    <p class="text-white text-lg font-semibold">${image.description}</p>
                </div>
            `;
            return imgDiv;
        }

        function resetModalToSingleView() {
            const galleryModal = document.getElementById('galleryModal');
            if (galleryModal) {
                // Keep the structural HTML of the modal-content for single image view
                galleryModal.querySelector('.modal-content').innerHTML = `
                    <button id="closeModalBtn" class="modal-close-btn">&times;</button>
                    <h3 class="text-xl md:text-3xl font-bold mb-4 md:mb-8" id="modalTitle">Image Details</h3>
                    <img id="enlargedImage" class="modal-enlarged-image" src="" alt="Enlarged Project Image">
                    <p id="imageDescription" class="modal-image-description"></p>
                    <div id="fullGalleryGridContainer" class="hidden"></div>
                `;
                // Re-attach close listener to the new button
                document.getElementById('closeModalBtn').addEventListener('click', function() {
                    galleryModal.classList.remove('active');
                    document.body.style.overflow = '';
                });
            }
        }

        window.onload = function() {
            setTimeout(function() {
                const galleryModal = document.getElementById('galleryModal');
                const viewAllGalleryBtn = document.getElementById('viewAllGalleryBtn');

                // Get initial references to elements within the modal for single image view
                let enlargedImage = document.getElementById('enlargedImage');
                let imageDescription = document.getElementById('imageDescription');
                let modalTitle = document.getElementById('modalTitle');

                // Get the container for the initial 6 images
                const mainGalleryGrid = document.querySelector('#gallery .grid');

                // Clear any existing static HTML images and populate the first 6 dynamically
                if (mainGalleryGrid) {
                    mainGalleryGrid.innerHTML = '';
                    allGalleryImages.slice(0, 6).forEach(image => {
                        const imgElement = createImageElement(image);
                        imgElement.querySelector('img').addEventListener('click', function() {
                            openImageModal(image.src, image.alt, image.description);
                        });
                        mainGalleryGrid.appendChild(imgElement);
                    });
                }

                // Function to open modal with a specific image (single view)
                function openImageModal(src, alt, description) {
                    resetModalToSingleView(); // Ensure the modal content is reset to the single image view structure

                    // Re-query elements as resetModalToSingleView re-creates them
                    enlargedImage = document.getElementById('enlargedImage');
                    imageDescription = document.getElementById('imageDescription');
                    modalTitle = document.getElementById('modalTitle'); // Re-query modalTitle as well

                    modalTitle.textContent = description; // Update modal title with image description
                    enlargedImage.src = src;
                    enlargedImage.alt = alt;
                    imageDescription.textContent = description;
                    galleryModal.classList.add('active');
                    document.body.style.overflow = 'hidden';
                }

                // Event Listener for the "See More Projects" button
                if (viewAllGalleryBtn) {
                    viewAllGalleryBtn.addEventListener('click', function() {
                        const fullGalleryGridContainer = document.getElementById('fullGalleryGridContainer');
                        if (fullGalleryGridContainer) {
                            // Hide single image view elements (which are part of the main modal-content div)
                            enlargedImage.classList.add('hidden');
                            imageDescription.classList.add('hidden');
                            modalTitle.textContent = "All Projects"; // Change modal title for full view

                            // Dynamically create the full gallery grid
                            let fullGridHtml = '<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">';
                            allGalleryImages.forEach(image => {
                                fullGridHtml += createImageElement(image, true).outerHTML; // Use outerHTML to get the div itself
                            });
                            fullGridHtml += '</div>';

                            fullGalleryGridContainer.innerHTML = fullGridHtml;
                            fullGalleryGridContainer.classList.remove('hidden'); // Show the grid

                            // Re-attach click listeners to the dynamically created images in the full gallery grid
                            fullGalleryGridContainer.querySelectorAll('.gallery-modal-grid-item').forEach(item => {
                                item.addEventListener('click', function() {
                                    // Pass the image data to openImageModal
                                    const src = this.querySelector('img').src; // Get src from the img inside the item
                                    const alt = this.querySelector('img').alt; // Get alt from the img inside the item
                                    const description = this.querySelector('p').textContent; // Get description from p tag inside the item
                                    openImageModal(src, alt, description); // Switch back to single view
                                });
                            });
                        }
                        galleryModal.classList.add('active');
                        document.body.style.overflow = 'hidden';
                    });
                }

                // Close modal via 'x' button
                const initialCloseModalBtn = document.getElementById('closeModalBtn');
                if (initialCloseModalBtn) {
                    initialCloseModalBtn.addEventListener('click', function() {
                        galleryModal.classList.remove('active');
                        document.body.style.overflow = '';
                        resetModalToSingleView(); // Reset modal content when closed
                    });
                }

                // Close modal if clicking outside the content (on the overlay)
                if (galleryModal) {
                    galleryModal.addEventListener('click', function(event) {
                        if (event.target === galleryModal) {
                            galleryModal.classList.remove('active');
                            document.body.style.overflow = '';
                            resetModalToSingleView(); // Reset modal content when closed via overlay
                        }
                    });
                } else {
                    console.error("Gallery modal element (galleryModal) not found on initial load.");
                }
            }, 100);
        };
    </script>
</body>
</html>
